local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/m0dzn1/m0dzn-ui-lib-test/refs/heads/main/m0dzn%20ui%20lib"))()

if not Library then return end

local Window = Library:CreateWindow({
    Title = "TEST",
    Keybind = Enum.KeyCode.M --This is Clickgui Keybind
})

local MainTab = Window:Tab("Main")
local SettingsTab = Window:Tab("Settings")

MainTab:Section("Example")
MainTab:Button("Click Me", function()
    Window:Notification("I don't freeze the script anymore!")
end)

SettingsTab:Section("Interface")

-- NEW KEYBIND ELEMENT
SettingsTab:Keybind("Clickgui Keybind", Enum.KeyCode.M, function(newKey)
    Window:SetKeybind(newKey)
    Window:Notification("Keybind set to: " .. newKey.Name)
end)

SettingsTab:Button("Destroy UI", function()
    Window:Destroy()
end)
